@model DoAnLTW.Models.ProductSize

@{
    ViewData["Title"] = "Thêm Size cho Sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/layoutAdmin.cshtml";
}

<h2 class="text-center">Thêm Size cho Sản phẩm</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label class="form-label">Chọn Sản phẩm</label>
        <select asp-for="ProductId" class="form-control" required>
            <option value="">-- Chọn sản phẩm --</option>
            @foreach (var item in ViewBag.Products)
            {
                <option value="@item.Id">@item.Name</option>
            }
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Chọn Size</label>
        <select asp-for="SizeId" class="form-control" required>
            <option value="">-- Chọn size --</option>
            @foreach (var item in ViewBag.Sizes)
            {
                <option value="@item.Id">@item.size</option>
            }
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Số lượng tồn kho</label>
        <input asp-for="Stock" type="number" class="form-control" min="1" required />
    </div>

    <button type="submit" class="btn btn-success">Thêm</button>
</form>
