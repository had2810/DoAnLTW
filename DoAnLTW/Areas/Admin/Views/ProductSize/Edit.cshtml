@model DoAnLTW.Models.ProductSize

@{
    ViewData["Title"] = "Chỉnh sửa số lượng tồn kho";
    Layout = "~/Areas/Admin/Views/Shared/layoutAdmin.cshtml";
}

<h2 class="text-center">Chỉnh sửa số lượng tồn kho</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label class="form-label">Tên Sản phẩm</label>
        <input class="form-control" value="@Model.Product?.Name" disabled />
    </div>

    <div class="mb-3">
        <label class="form-label">Size</label>
        <input class="form-control" value="@Model.Size?.size" disabled />
    </div>

    <div class="mb-3">
        <label class="form-label">Số lượng</label>
        <input asp-for="Stock" type="number" class="form-control" min="1" required />
    </div>

    <button type="submit" class="btn btn-warning">Lưu thay đổi</button>
</form>
