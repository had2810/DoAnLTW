@model DoAnLTW.Models.Category

@{
    ViewData["Title"] = "Sửa danh mục";
    Layout = "~/Areas/Admin/Views/Shared/layoutAdmin.cshtml";
}

<h2 class="text-center">Sửa danh mục</h2>

<div class="row">
    <div class="col-md-8 offset-md-2">
        <form asp-action="Edit" asp-controller="Category" asp-area="Admin" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label">Tên danh mục</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label class="control-label">Hình ảnh hiện tại</label>
                @if (Model.ImageUrl != null && Model.ImageUrl.Any())
                {
                    <div>
                        <img src="@Model.ImageUrl" alt="Ảnh danh mục" style="width: 60px; height: 60px; object-fit: cover;" />
                    </div>
                }
                else
                {
                    <p>Chưa có hình ảnh</p>
                }
            </div>
            <div class="form-group mb-3">
                <label class="control-label">Thay đổi hình ảnh (nếu muốn)</label>
                <input type="file" name="ImageFile" class="form-control" accept="image/*" />
                <span class="text-danger" asp-validation-for="ImageUrl"></span>
            </div>
            <div class="form-group text-center">
                <button type="submit" class="btn btn-success">Cập nhật</button>
                <a asp-action="Index" asp-controller="Category" asp-area="Admin" class="btn btn-secondary">Quay lại</a>
            </div>
        </form>
    </div>
</div>
