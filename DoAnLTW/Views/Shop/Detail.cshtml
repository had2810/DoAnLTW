@model DoAnLTW.Models.Product

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/layoutAdmin.cshtml";
}

<h2 class="text-center">Chi tiết sản phẩm</h2>

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="form-group mb-3">
            <label class="control-label">Tên sản phẩm</label>
            <p class="form-control-static">@Model.Name</p>
        </div>

        <div class="form-group mb-3">
            <label class="control-label">Giá (VNĐ)</label>
            <p class="form-control-static text-danger">@Model.Price.ToString("N0") VNĐ</p>
        </div>

        <div class="form-group mb-3">
            <label class="control-label">Mô tả sản phẩm</label>
            <p class="form-control-static">@Model.Description</p>
        </div>

        <div class="form-group mb-3">
            <label class="control-label">Thương hiệu</label>
            <p class="form-control-static">@(Model.Brand != null ? Model.Brand.Name : "Không có thông tin")</p>
        </div>

        <div class="form-group mb-3">
            <label class="control-label">Danh mục</label>
            <p class="form-control-static">@(Model.Category != null ? Model.Category.Name : "Không có thông tin")</p>
        </div>

        <div class="form-group mb-3">
            <label class="control-label">Hình ảnh sản phẩm</label>
            @if (Model.Images != null && Model.Images.Any())
            {
                <div>
                    @foreach (var img in Model.Images)
                    {
                        <img src="@img.ImageUrl" alt="Ảnh sản phẩm" style="width: 80px; height: 80px; object-fit: cover; margin-right: 5px;" />
                    }
                </div>
            }
            else
            {
                <p>Chưa có hình ảnh</p>
            }
        </div>

        <div class="form-group text-center">
            <a asp-action="Index" asp-controller="Product" asp-area="Admin" class="btn btn-secondary">Quay lại</a>
        </div>
    </div>
</div>
